{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:eventstorage-inmemory": "cross-env EVENTSOURCING_MODE=inmemory nest start --watch",
    "start:dev:eventstorage-inmemory:debug": "cross-env EVENTSOURCING_MODE=inmemory nest start --debug '0.0.0.0:9229' --watch",
    "start:dev:eventstorage-typeorm:debug": "cross-env EVENTSOURCING_MODE=typeorm nest start --debug '0.0.0.0:9229' --watch",
    "start:dev:eventstorage-typeorm:docker": "scripts/start_dev_eventstorage-typeorm_docker.sh",
    "start:dev:eventstorage-typeorm:debug:docker": "scripts/start_dev_eventstorage-typeorm_debug_docker.sh",
    "start:dev:eventstorage-eventstore:docker": "scripts/start_dev_eventstorage-eventstore_docker.sh",
    "start:dev:eventstorage-eventstore:debug": "cross-env EVENTSOURCING_MODE=eventstore EVENTSTORE_URL=http://127.0.0.1:2113 EVENTSTORE_USERNAME=admin EVENTSTORE_PASSWORD=changeit nest start --debug '0.0.0.0:9229' --watch",
    "start:dev:eventstorage-eventstore:debug+docker": "scripts/start_dev_eventstorage-eventstore_debug_docker.sh",
    "start:debug": "nest start --debug '0.0.0.0:9229' --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk=0.0.0.0:9229 -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --passWithNoTests",
    "ci-format": "prettier -c \"src/**/*.ts\" \"test/**/*.ts\"",
    "ci-lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --format codeframe"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/cqrs": "^6.1.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/typeorm": "^7.0.0",
    "@willsoto/nestjs-prometheus": "^0.1.1",
    "moment": "^2.24.0",
    "pg": "^8.0.3",
    "postgres": "^1.0.2",
    "prom-client": "^12.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@coders-board-library/event-sourcing/(.*)": "<rootDir>/libs/event-sourcing/src/$1",
      "@coders-board-library/event-sourcing": "<rootDir>/libs/event-sourcing/src",
      "@coders-board-library/time-provider/(.*)": "<rootDir>/libs/time-provider/src/$1",
      "@coders-board-library/time-provider": "<rootDir>/libs/time-provider/src",
      "@coders-board-library/public-messages/(.*)": "<rootDir>/libs/public-messages/src/$1",
      "@coders-board-library/public-messages": "<rootDir>/libs/public-messages/src",
      "@coders-board-library/rxjs-utils/(.*)": "<rootDir>/libs/rxjs-utils/src/$1",
      "@coders-board-library/rxjs-utils": "<rootDir>/libs/rxjs-utils/src",
      "@coders-board-library/axios-utils/(.*)": "<rootDir>/libs/axios-utils/src/$1",
      "@coders-board-library/axios-utils": "<rootDir>/libs/axios-utils/src",
      "@coders-board-library/eventstore-projections/(.*)": "<rootDir>/libs/eventstore-projections/src/$1",
      "@coders-board-library/eventstore-projections": "<rootDir>/libs/eventstore-projections/src"
    }
  },
  "eslintIgnore": [
    "**/*.projection.*"
  ]
}
